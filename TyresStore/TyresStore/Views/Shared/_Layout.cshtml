<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class="header">
        <div class="shopping-cart" onclick="basketModel.getBasketHtml()">
            <div class="glyphicon glyphicon-shopping-cart cart-button">(0)</div>
        </div>
    </div>

    <div class="navbar navbar-default navbar-fixed-top">
        <a class="navbar-brand" href="#">
            <img src="http://www.topmotive.eu/images/unternehmen/gruppenLogos/DVSE_logo.png" alt="logo" style="width:60px;">
        </a>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#example-navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!--      @Html.ActionLink("Vehicles & Tyres", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })-->

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Products", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>

    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <div class="footer"><marquee width="100%"> © Sonia Elena Parlea - Workshop DVSE 2018 </marquee></div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/customScripts")

    @RenderSection("scripts", required: false)
</body>
</html>
