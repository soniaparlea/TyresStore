@model IList<TyresStore.Repository.Models.Vehicle>

@{
    ViewBag.Title = "Home Page";
}


@if(Model.Count > 0)
{
<div>
<table class="table">
    <thead>
        <tr>
            <th>Manufacter</th>
            <th>Model</th>
            <th>Year</th>
            <th>Color</th>
            <th>Id</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Vehicle in Model)
        {
        <tr>
            <td>@Vehicle.Manufacturer</td>
            <td>@Vehicle.Model</td>
            <td>@Vehicle.Year</td>
            <td>@Vehicle.Color</td>
            <td>@Vehicle.ID</td>
            <td class="button-select">
                <button type="button" class="btn btn-default btn-md" onclick="mainModel.loadTyres(@Vehicle.ID)">  Select to see tyres <span class="glyphicon glyphicon-shopping-cart"></span></button>
            </td>
        </tr>
        }
    </tbody>
</table> 
    </div>
}

<div class="tyre-table">
    <div class="header-table"><span class="tyre-title"> Tyres </span></div>
    <div class="table-content"></div>
</div>


